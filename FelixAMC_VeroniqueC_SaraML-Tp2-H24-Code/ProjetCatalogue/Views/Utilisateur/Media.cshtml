
<div class="row">
    @foreach (Video video in Model)
    {
        <div class="col-3">
            <a href="VideoSpecifique?id=@video.IdVideo">
                <div class="card text-end bg-clear text-white ">
                    <img src="@Url.Content(video.Image)" class="card-img" style="height:175px">
                    <div class="card-img-overlay">
                        <p class="card-text"><mark>@video.CoteEvaluation</mark></p>
                        <p class="card-text dureeVideo"><mark>@video.DureeVideo</mark></p>
                    </div>
                </div>
            </a>
            <p>
                @video.Titre 
                <br/>
                @video.TypeVideo
            </p>
        </div>
    }
</div>


